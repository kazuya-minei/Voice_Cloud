<h1 class="title">ログイン</h1>

<div class="Form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="Form-Item">
      <%= f.label :email, class:"Form-Item-Label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"Form-Item-Input email" %>
    </div>
  
    <div class="Form-Item">
      <%= f.label :password, class:"Form-Item-Label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"Form-Item-Input password" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <%= f.label :remember_me, class: "inline" %>
        <%= f.check_box :remember_me %>
        <span>ログインしたままにする</span>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン", class:"Form-Btn login", id:"login" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>