<h1 class="title">ログイン</h1>

<div class="Form">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="Form-Item">
      <%= f.label :メールアドレス, class:"Form-Item-Label" %>
      <%= f.email_field :email, class:"Form-Item-Input" %>
    </div>

    <div class="Form-Item">  
      <%= f.label :パスワード, class:"Form-Item-Label" %>
      <%= f.password_field :password, class:"Form-Item-Input" %>
    </div> 

    <div class="checkbox">
      <%= f.label :remember_me, class: " inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログインしたままにする</span>
      <% end %>
    </div>

    <%= f.submit "ログイン", class:"Form-Btn" %>

  <% end %>

  <p class="registered">登録はお済みですか？<%= link_to "新規登録", signup_path %></p>
</div>