<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>    
  </head>


  <body class="bg-add-bg text-center">
    <div id="app">
      <%= render 'layouts/header' %>
    </div>
    
    <% if current_page?(root_path) %>

      <%= yield %> 

    <% else %>

      <% if current_user != nil %>
        <%= render 'shared/right'  %>
      <% end %>

      <div class="<%= page %>">
        <%= yield %>  
      </div>

      <% if current_user != nil %>
        <%= render 'shared/left'  %>
      <% end %>
       
    <% end %>
      
    <%= render 'layouts/footer' %>

    <%= debug(params) if Rails.env.development? %>
      
    <script>
      const app = new Vue({
          el: "#app",
          data: {
            isOpen: false,
          }
      });
    </script>
  </body>
</html>

