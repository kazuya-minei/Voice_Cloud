<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>    
  </head>


  <body class="bg-add-bg">
    <div id="app">
      <%= render 'layouts/header' %>
    </div>
    
    <% if current_page?(root_path) %>
      <%= yield %>  
    <% else %>
      <div class="<%= page %>">
        <%= yield %>  
      </div>
    <% end %>
      
    <%= render 'layouts/footer' %>

    <%= debug(params) if Rails.env.development? %>
      
    <script>
      const app = new Vue({
          el: "#app",
          data: {
            isOpen: false,
          }
      });
    </script>
  </body>
</html>
