<!--<% provide(:title, "プロフィールページ") %>-->

<h1 class="title">Profile</h1>

<div class="body">
  <div class="item1 image">
    <div class="image-icon">
      <%= image_tag @user.avatar.url, size:250 %>
    </div>
  </div>

  <div class="follow">
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if logged_in? %>
  </div>


  <div class="item2">
    <h1 class="">
      <p class="name"><%= @user.name %></p>
      <p class="profile-text"><%= @user.introduction_text %></p>
    </h1>
  </div>

  <% if @user.voice_s? %>
    <div class="item3">
      <h1 class="item-name">Voice Smple</h1>
      <%= audio_tag @user.voice_s.url %>
    </div>
  <% end %>

  <% if @user.works.any? %>
    <div class="item4">
      <h1 class="item-name">現在声優募集中の仕事</h1>
      <%= render 'works/works' %>
    </div>
  <% end %>
</div>