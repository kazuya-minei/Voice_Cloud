<!--<% provide(:title, "プロフィールページ") %>-->

<h1 class="title">Profile</h1>

<div class="body">
  <div class="item1 image">
    <div class="image-icon">
      <%= image_tag @user.avatar.url, size:250 %>
    </div>
  </div>

  <div class="follow">
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if user_signed_in? %>
    <% if current_user %>
      <%= link_to "お気に入りしたお題", worklikes_user_path(@user) %>
    <% end %>
  </div>


  <div class="item2">
    <h1 class="">
      <p class="name"><%= @user.name %></p>
      <p class="profile-text"><%= @user.introduction_text %></p>
    </h1>
  </div>

  <% if @user.voice_s? %>
    <div class="item3">
      <h1 class="item-name">Voice Smple</h1>
      <%= audio_tag @user.voice_s.url %>
    </div>
  <% end %>

  <% if @user.works.any? %>
    <div class="item4">
      <h1 class="item-name">投稿したお題</h1>
      <%= render 'works/user_works' %>
    </div>
  <% end %>

  <!--<% if @user.voices.any? %>
    <div>
      <h1 class="item-name">投稿したボイス</h1>
      <%= render 'voices/voices' %>
    </div>
  <% end %>-->
</div>