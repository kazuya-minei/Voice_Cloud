<h1 class="title">List of Voice Actors</h1>

<%= will_paginate %>

<div class="items">
  <% @users.each do |user| %>
    <div class="one-item user">
      <%= image_tag user.avatar.url, size: 150 %>
      <%= link_to user.name, user %>
      <% if user.voice_s? %>
        <%= audio_tag user.voice_s.url, controls: true %>
      <% end %>

      <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "delete", user, method: :delete, data: { confirm: "削除しますか?" } %>
      <% end %>
    </div>
  <% end %>
</div>

<%= will_paginate %>